<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingConfirmationActivity">


    <LinearLayout
        android:id="@+id/linear_booking_details"
        android:layout_height="300dp"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:background="#EFF4F4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Details"
            android:textSize="23dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚ª10.00/Hour"
            android:textSize="23dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Space"
                android:textSize="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apps Development Lab"
                android:textSize="20dp"
                android:textColor="#BA5C3E"
                android:layout_marginStart="90dp"
                android:layout_marginTop="20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25/08/2023"
                android:textSize="20dp"
                android:textColor="#777575"
                android:layout_marginStart="125dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change"
                android:textSize="20dp"
                android:textColor="#BA5C3E"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:22 - 16:22"
                android:textSize="20dp"
                android:textColor="#777575"
                android:layout_marginStart="191dp"
                android:layout_marginTop="20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration"
                android:textSize="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="20dp"
                android:textColor="#777575"
                android:layout_marginStart="235dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hr"
                android:textSize="20dp"
                android:textColor="#777575"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/booking_confirmation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Booking Confirmation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_booking_details"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/first_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/booking_confirmation_text"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:id="@+id/edit_first_name"
        android:layout_width="170dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_text"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/border_edit"
        />

    <TextView
        android:id="@+id/last_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name"
        app:layout_constraintStart_toEndOf="@+id/first_text"
        android:layout_marginStart="110dp"
        app:layout_constraintTop_toBottomOf="@+id/booking_confirmation_text"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:id="@+id/edit_last_name"
        android:layout_width="170dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@id/edit_first_name"
        app:layout_constraintTop_toBottomOf="@+id/first_text"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/border_edit"
        />



    <TextView
        android:id="@+id/phone_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_first_name"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/edit_phone_number"
        android:layout_width="350dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_number_text"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/border_edit"
        />

    <TextView
        android:id="@+id/email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_phone_number"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/edit_email_address"
        android:layout_width="350dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_text"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/border_edit"
        />


    <TextView
        android:id="@+id/notes_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notes"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_email_address"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/edit_notes"
        android:layout_width="350dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notes_text"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/border_edit"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_check"
        android:layout_width="160dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Confirm and Book"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:background="@drawable/border_button"
        android:backgroundTint="#030A33"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/edit_notes"
        />


</androidx.constraintlayout.widget.ConstraintLayout>